page {
  /* background: skyblue; */
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  
}
.search{
  background: skyblue;
  padding: 20rpx;
  position: relative;
}
.search input{
  background: #fff;
  width: 710rpx;
  border-radius: 10rpx;
  height: 60rpx;
}
.search image{
  position: absolute;
  width: 40rpx;
  top: 28rpx;
  left: 30rpx;
}

.flex_row{
  display: flex;
  flex-direction: row;
}

.nav_left{
  width: 25%;
  height:100%;
  overflow-y:auto; 
  background: white;
  margin-top: 4rpx;
}
.nav_left view{
  padding: 20rpx 20rpx;
  font-size: 16px;
  position: relative;
  /*转化行内块*/
  display: inline-block;
}
