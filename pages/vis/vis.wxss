.san{
  /* margin-top:40rpx; */
  height:calc(100vh - 80rpx);
  /* margin-top: 5rpx; */
  margin-left: 8rpx;
  margin-right: 8rpx;
  background: white;

}
.san>view{
  overflow: hidden;
}
.san view view view{
  width: 170rpx;
  float: left;
  margin-left: 25rpx;
}
.san view view:nth-of-type(2n){
  margin-left: 10rpx;
}
.san image{
  width: 100rpx;
  height: 100rpx;
  margin-top: 30rpx;
  margin-left: 10rpx;
}
